<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youdo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Calendar.CalendarActivity" />
        <activity
            android:name=".TodoList.TodoActivity"
            android:label="TodoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TodoList.AddTaskActivity" />
        <activity
            android:name=".Schedule.ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Schedule.AddToScheduleActivity" />
        <activity android:name=".Calendar.AddEventActivity" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ImportantDates.ImpGoalsActivity"
            android:label="@string/title_activity_imp_goals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ImportantDates.AddGoalActivity" />
        <activity
            android:name=".ImportantDates.AddDateActivity"
            android:label="@string/title_activity_add_date"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>