<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youdo.Schedule.AddToScheduleActivity">
    <!-- Header aligned to top -->
    <include layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include10" />

    <!-- Footer aligned to bottom -->
    <include layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <EditText

        android:id="@+id/editScheduleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonScheduleStartTime"
        android:layout_alignEnd="@+id/buttonScheduleStartTime"
        android:layout_alignStart="@+id/editScheduleStartTime"
        android:hint="Enter Name" />

    <Button

        android:id="@+id/buttonScheduleEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonScheduleStartTime"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editScheduleStartTime"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="setScheduleEndTimeClicked"
        android:text="Select End Time"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button

        android:id="@+id/buttonAddSchedule"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonScheduleEndTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="addScheduleButtonClicked"
        android:text="Add"
        android:textAllCaps="false"
        android:textStyle="bold" />

        <Button

            android:id="@+id/buttonScheduleStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editScheduleStartTime"
            android:layout_toEndOf="@+id/editScheduleStartTime"
            android:background="@drawable/button_bg_rounded_corners"
            android:onClick="setScheduleStartTimeClicked"
            android:text="Select Start Time"
            android:textAllCaps="false"
            android:textStyle="bold" />

    <EditText

        android:id="@+id/editScheduleStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonScheduleEndTime"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="42dp"
        android:hint="Enter Start Time" />

    <EditText

        android:id="@+id/editScheduleEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAddSchedule"
        android:layout_alignStart="@+id/editScheduleStartTime"
        android:layout_toStartOf="@+id/buttonScheduleEndTime"
        android:hint="Enter End Time" />


</RelativeLayout>
