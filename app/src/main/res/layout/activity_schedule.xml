<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youdo.Schedule.ScheduleActivity">
    <!-- Header aligned to top -->
    <include layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include10" />

    <!-- Footer aligned to bottom -->
    <include layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <!-- Content below header and above footer -->

    <android.support.design.widget.TabLayout
        android:id="@+id/dayTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include10"
        app:tabIndicatorColor="#725273">

        <android.support.design.widget.TabItem
            android:id="@+id/Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon" />

        <android.support.design.widget.TabItem
            android:id="@+id/Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue" />

        <android.support.design.widget.TabItem
            android:id="@+id/Wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed" />

        <android.support.design.widget.TabItem
            android:id="@+id/Thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu" />

        <android.support.design.widget.TabItem
            android:id="@+id/Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri" />

        <android.support.design.widget.TabItem
            android:id="@+id/Saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat" />

        <android.support.design.widget.TabItem
            android:id="@+id/Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun" />
    </android.support.design.widget.TabLayout>


    <ListView
        android:id="@+id/schedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dayTabs"
        android:layout_marginBottom="60dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonAddSched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/schedView"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="400dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#725273" />

</RelativeLayout>
