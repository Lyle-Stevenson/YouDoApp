<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">
    <!-- Header aligned to top -->
    <include
        android:id="@+id/include3"
        layout="@layout/header"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/include4" android:layout_width="300dp" android:layout_height="600dp"/>

    <!-- Footer aligned to bottom -->
    <include
        android:id="@+id/include4"
        layout="@layout/footer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/include3"
        android:layout_alignTop="@+id/relativeLayout2" />

    <!-- Content below header and above footer -->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="250dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:gravity="center">

    </RelativeLayout>

    <Button
        android:id="@+id/deleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/include3"
        android:layout_alignTop="@+id/include4"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="deleteTaskButtonClicked"
        android:text="Delete"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/todoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/include3"
        android:layout_alignTop="@+id/deleteTask"
        android:layout_marginStart="12dp"
        android:text="Task Name"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>